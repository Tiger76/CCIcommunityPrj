{% if pagination.pages_count > 1 %}
<section>
    <ul class="pagination">
        {% if pagination.page > 1 %}
            <li class=""><a href="{{ path(pagination.route,
        pagination.route_params|merge({'page': 1})) }}"><<</a></li>
        <li class=""><a href="{{ path(pagination.route,
        pagination.route_params|merge({'page': pagination.page-1})) }}"><</a></li>
        {% endif %}

        {% for p in range( 1, pagination.pages_count) %}
            <li {% if p == pagination.page %} class="active"{% endif %}>
                <a href="{% if p == pagination.page %}#{% else %}{{ path(pagination.route,
        pagination.route_params|merge({'page': p})) }}{% endif %}">{{ p }} {% if p != pagination.page %}<span class="sr-only">(current)</span>{% endif %}</a>
            </li>
        {% endfor %}

        {% if pagination.page<pagination.pages_count %}
            <li class=""><a href="{{ path(pagination.route,
        pagination.route_params|merge({'page': pagination.page+1})) }}">></a></li>
        <li class=""><a href="{{ path(pagination.route,
        pagination.route_params|merge({'page': pagination.pages_count})) }}">>></a></li>
        {% endif %}
    </ul>
</section>

{% endif %}
